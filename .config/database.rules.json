{
  "rules": {
    "authors": {
      "$uid": {
        "displayName": {
          ".read": true
        },
        "photoURL": {
          ".read": true
        },
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/admins').child(auth.token.email.replace('.', ',')).exists())",
        ".write": "auth != null && (auth.uid === $uid || root.child('roles/admins').child(auth.token.email.replace('.', ',')).exists())"
      }
    },
    "users": {
      "$uid": {
        "displayName": {
          ".read": true
        },
        "photoURL": {
          ".read": true
        },
        ".read": true,
        ".write": true
      }
    },
    "bands": {
      "$bandId": {
        "displayName": {
          ".read": true
        },
        "photoURL": {
          ".read": true
        },
        ".read": "auth != null && (auth.uid === $bandId || root.child('roles/admins').child(auth.token.email.replace('.', ',')).exists())",
        ".write": "auth != null && (auth.uid === $bandId || root.child('roles/admins').child(auth.token.email.replace('.', ',')).exists())"
      }
    },
    "roles": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('roles/admins').child(auth.token.email.replace('.', ',')).exists()"
    },
    "comments": {
      ".read": true,
      ".write": "auth != null"
    },
    ".read": false,
    ".write": false
  }
}